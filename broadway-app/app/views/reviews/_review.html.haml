.review
  %div.review-rating{"data-score"=> review.rating}  
  %p.review-comment= simple_format review.comment
  .links.btn-group
    - if user_signed_in?
      - if review.user_id == current_user.id        
        = link_to "Edit", edit_play_review_path(review.play, review)
        = link_to "Delete", play_review_path(review.play, review), method: :delete, data: {confirm: "Are you sure?"}