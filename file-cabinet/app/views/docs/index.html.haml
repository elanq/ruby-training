.wrapper_with_padding
  #docs.clearfix
    - unless @docs.blank?
      //iterate documents
      -@docs.each do |doc|
        %a{ href: (url_for [doc])}
          .doc
            %p.title= doc.title
            //format timestamp by last created date
            %p.date= time_ago_in_words(doc.created_at)
            //truncate document content to 50 char
            %p.content= truncate(doc.content, length:50)\
    - else
      %h2 Create doc!
      %p Start creating your documents
      %button= link_to "Create doc", new_doc_path